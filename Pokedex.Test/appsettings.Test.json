{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",

  "PokeApiClient": {
    "BaseUrl": "https://pokeapi.co",
    "SpeciesUri": "api/v2/pokemon-species/{0}"
  },

  "FunTranslationsClient": {
    "BaseUrl": "https://api.funtranslations.com",
    "YodaUri": "/translate/yoda.json",
    "ShakespeareUri": "/translate/shakespeare.json"
  },

  "PollySettings": {
    "GlobalTimeOut": 30,
    "Retry": [ 1, 2, 4 ],
    "DurationOfBreak": 10,
    "HandledEventsAllowedBeforeBreaking": 3
  }
}